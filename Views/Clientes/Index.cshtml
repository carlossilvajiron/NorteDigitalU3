@model IEnumerable<prueba.Models.Cliente>
@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="main-wrapper">
    <div class="content-wrapper">
        <main class="container-fluid py-4">
            <!-- Header Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <div class="mb-2">
                            <h1 class="text-gradient mb-2">Gestión de Clientes</h1>
                            <p class="text-muted">Administra los clientes registrados en el sistema</p>
                        </div>
                        <div class="mb-2">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Nuevo Cliente
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Search Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body py-3">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                                        <input type="text" id="searchInput" class="form-control"
                                               placeholder="Buscar por nombre, apellido, correo o teléfono...">
                                    </div>
                                </div>
                                <div class="col-md-4 text-md-end mt-2 mt-md-0">
                                    <span class="text-muted">
                                        Total de clientes: <strong id="clientCount">@Model.Count()</strong>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Clients Table -->
            <div class="row">
                <div class="col-12">
                    <div class="card fade-in-up">
                        <div class="card-header">
                            <h4 class="mb-0"><i class="fas fa-users me-2"></i>Lista de Clientes</h4>
                        </div>
                        <div class="card-body p-0">
                            @if (Model.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0" id="clientsTable">
                                        <thead>
                                            <tr>
                                                <th scope="col">
                                                    <i class="fas fa-user me-1"></i>Nombre Completo
                                                </th>
                                                <th scope="col">
                                                    <i class="fas fa-envelope me-1"></i>Correo
                                                </th>
                                                <th scope="col">
                                                    <i class="fas fa-phone me-1"></i>Teléfono
                                                </th>
                                                <th scope="col">
                                                    <i class="fas fa-map-marker-alt me-1"></i>Dirección
                                                </th>
                                                <th scope="col">
                                                    <i class="fas fa-toggle-on me-1"></i>Estado
                                                </th>
                                                <th scope="col" class="text-center">
                                                    <i class="fas fa-cogs me-1"></i>Acciones
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var cliente in Model)
                                            {
                                                <tr class="client-row">
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar-circle me-2">
                                                                @cliente.Nombre.Substring(0, 1).ToUpper()@cliente.Apellido.Substring(0, 1).ToUpper()
                                                            </div>
                                                            <strong>@cliente.Nombre @cliente.Apellido</strong>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <a href="mailto:@cliente.Correo" class="text-primary text-decoration-none">
                                                            @cliente.Correo
                                                        </a>
                                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(cliente.Telefono))
                                                        {
                                                            <a href="tel:@cliente.Telefono" class="text-dark text-decoration-none">
                                                                @cliente.Telefono
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">No especificado</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(cliente.Direccion))
                                                        {
                                                            <span>@cliente.Direccion</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">No especificada</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (cliente.Estado == 1)
                                                        {
                                                            <span class="badge badge-success">
                                                                <i class="fas fa-check-circle me-1"></i>Activo
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger">
                                                                <i class="fas fa-times-circle me-1"></i>Inactivo
                                                            </span>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="btn-group" role="group">
                                                            <a asp-action="Details" asp-route-id="@cliente.Id"
                                                               class="btn btn-sm btn-outline-primary"
                                                               title="Ver detalles">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a asp-action="Edit" asp-route-id="@cliente.Id"
                                                               class="btn btn-sm btn-outline-warning"
                                                               title="Editar">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <a asp-action="Delete" asp-route-id="@cliente.Id"
                                                               class="btn btn-sm btn-outline-danger"
                                                               title="Eliminar">
                                                                <i class="fas fa-trash"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <div class="mb-3">
                                        <i class="fas fa-users text-muted" style="font-size: 4rem;"></i>
                                    </div>
                                    <h4 class="text-muted">No hay clientes registrados</h4>
                                    <p class="text-muted mb-4">Comienza agregando tu primer cliente al sistema</p>
                                    <a asp-action="Create" class="btn btn-primary">
                                        <i class="fas fa-plus me-2"></i>Crear Primer Cliente
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats Cards -->
            @if (Model.Any())
            {
                <div class="row mt-4">
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card service-card text-center">
                            <div class="card-body">
                                <div class="card-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <h3 class="text-primary">@Model.Count()</h3>
                                <p class="text-muted mb-0">Total Clientes</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card service-card text-center">
                            <div class="card-body">
                                <div class="card-icon">
                                    <i class="fas fa-user-check"></i>
                                </div>
                                <h3 class="text-success">@Model.Count(c => c.Estado == 1)</h3>
                                <p class="text-muted mb-0">Clientes Activos</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card service-card text-center">
                            <div class="card-body">
                                <div class="card-icon">
                                    <i class="fas fa-user-times"></i>
                                </div>
                                <h3 class="text-warning">@Model.Count(c => c.Estado != 1)</h3>
                                <p class="text-muted mb-0">Clientes Inactivos</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card service-card text-center">
                            <div class="card-body">
                                <div class="card-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <h3 class="text-info">@Model.Count(c => !string.IsNullOrEmpty(c.Correo))</h3>
                                <p class="text-muted mb-0">Con Correo</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </main>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--tech-gradient);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 0.9rem;
    }

    .btn-group .btn {
        margin: 0 1px;
    }

    .client-row:hover {
        background-color: var(--light-blue) !important;
    }
</style>

@section Scripts {
    <script>
        // Búsqueda en tiempo real
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#clientsTable tbody tr');
            let visibleCount = 0;

            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            // Actualizar contador
            document.getElementById('clientCount').textContent = visibleCount;
        });

        // Confirmación antes de eliminar
        document.querySelectorAll('a[title="Eliminar"]').forEach(link => {
            link.addEventListener('click', function(e) {
                if (!confirm('¿Está seguro de que desea eliminar este cliente?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}